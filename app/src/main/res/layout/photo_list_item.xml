<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:id="@+id/userBarLayout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:orientation="horizontal">
    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImageView"
        android:scaleType="fitCenter"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="#DDDDDD"
        app:riv_mutate_background="true"
        app:riv_tile_mode="clamp"
        app:riv_oval="true"
        android:layout_width="60dip"
        android:layout_height="60dip"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/usernameTextView"
        android:background="#00000000"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/postTimeTextView"
        android:background="#00000000"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"/>
  </LinearLayout>
  <ImageView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:id="@+id/photoImageView"
      android:layout_below="@+id/userBarLayout"
      android:layout_alignLeft="@+id/userBarLayout"
      android:layout_alignRight="@+id/userBarLayout"
      android:scaleType="fitXY"
      android:adjustViewBounds="true"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:id="@+id/likeTextView"
      android:layout_below="@+id/photoImageView"
      android:layout_alignLeft="@+id/photoImageView"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:background="#00000000"
      android:elegantTextHeight="false"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:id="@+id/captionTextView"
      android:layout_below="@+id/likeTextView"
      android:layout_alignLeft="@+id/likeTextView"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:background="#00000000"
      android:elegantTextHeight="false"/>
</RelativeLayout>